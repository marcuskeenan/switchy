@model PagedList.IPagedList<FlowswitchApplication.Models.CalibrationRecord>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "CalibrationRecords";
}
@Html.Partial("NavBarPartial")
<div class="row" style="padding-bottom:10px">
    <div class="col-sm-6">
        <h2>Calibration Records</h2>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="input-group custom-search-form classTextWithPad">
            <span class="input-group-btn btn-group-sm">
                <button class="btn btn-default btn-sm" type="button">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </span>
            @using (Html.BeginForm())
            {@Html.TextBox("SearchString", "", new { @class = "form-control", @placeholder = "search all fields...", @style = "height:36px; font-size:12px" })}
        </div>
    </div>
</div>
<div class="row" style="padding:20px">
    <div class="col-sm-push-6">

    </div>
</div>

<table class="table table-hover h5">
    <tr>
        <th class="col-sm-2">
            @Html.ActionLink("Flowswitch", "Index", new { sortOrder = ViewBag.FlowwitchIDSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="col-sm-1">
            @Html.ActionLink("DateAdded", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="col-sm-2">
            @Html.ActionLink("Technician", "Index", new { sortOrder = ViewBag.TechnicianIDSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th class="col-xs-1 hidden-xs">
            Trip Inches
        </th>
        <th class="col-sxs-1 hidden-xs">
            Trip Galllons
        </th>
        <th class="col-xs-1 hidden-xs">
            Max Inches
        </th>
        <th class="col-sxs-1 hidden-xs">
            Max Gallons
        </th>
        <th class="col-sm-4">
            Note
        </th>
        <th class="col-sm-1"></th>
    </tr>



    @foreach (var item in Model)
    {
        <tr class='clickable-row' data href="@Url.Action("xxx", "Details", new { id = item.ID})">

            <td>

                @Html.ActionLink(item.Flowswitch.Name, "Details", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Technician.LastName)
            </td>
            <td class="hidden-xs">
                @Html.DisplayFor(modelItem => item.TripInches)
            </td>
            <td class="hidden-xs">
                @Html.DisplayFor(modelItem => item.TripGallons)
            </td>
            <td class="hidden-xs">
                @Html.DisplayFor(modelItem => item.MaxInches)
            </td>
            <td class="hidden-xs">
                @Html.DisplayFor(modelItem => item.MaxGallons)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td class="hidden-xs">
                @Html.ActionLink("View", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-xs", @style = "color:white" })
            </td>
        </tr>
    }

</table>



<br />
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
